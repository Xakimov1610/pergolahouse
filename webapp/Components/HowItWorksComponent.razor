<section class="how-works section" style="background-color: #fff;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2 class="wow fadeInUp" data-wow-delay=".4s">Biz qanday ishlaymiz</h2>
                    <p class="wow fadeInUp" data-wow-delay=".6s">Ishlab chiqaruvchidan ulgurji narxlarda kafe, restoranlar, chakana savdo nuqtalari, uylar va kottejlar uchun avtomatik quyoshdan himoya qilish tizimlari.</p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var model in Models)
            {
                <HowItWorksCardComponent Index="@(Models.IndexOf(model)+1)" Model="@model" />
            }
        </div>
    </div>
</section>